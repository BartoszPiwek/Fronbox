mixin scrollable(params = {})
	-
		const { createClassNames } = require("@utilities/pugParser");

		const { 
			id,
			className,
			style,
			shadow,
			color = 'white',
		} = params;

		const classNames = createClassNames('scrollable', {
			type: {
				shadow
			},
			color
		});

	.scrollable(
		class = [
			className,
			classNames
		]
	)
		.scrollable__content
			.scrollable__inner
				block