include ~@components/Wrap/Wrap

mixin footer(params = {})
  -
    const { loadStyle } = require("@utilities/pugComponents");
    const styles = loadStyle('Footer');

    const {
      className,
      style,
      id,
      attr
    } = params;

  footer(
    class = [
      styles.element
    ],
    id = id,
    style = style,
  )&attributes(attr)

    +wrap 
      .row.space
        .col-12.md_col-4
          | Footer
        .col-12.md_col-4
          | Footer
        .col-12.md_col-4
          | Footer