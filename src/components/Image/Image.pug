mixin image(params = {})
  -
    const { loadStyle } = require("@utilities/pugComponents");
    const styles = loadStyle('Image');

    const { 
      id,
      className, 
      style, 
      attr,

      file = {},
      lazyload, 
    } = params;

  img(
    class= [
      className,
      styles.element,
    ],
    src = require(`@images/${file.src}`),
    alt = file.alt,
    lazyload = lazyload && 'lazy'
  )