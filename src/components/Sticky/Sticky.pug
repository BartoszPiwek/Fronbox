mixin sticky(params = {})
	-
		const { createTagClassNames, createStyle } = require("@utilities/pug");
		const styles = createStyle('Sticky');

		const { 
			id,
			className, 
			style, 
			attr,

			hasInit = true,
			data = {
				id: ''
			}
		} = params;

	div(
		id = id,
		class= [
			className,
			styles('element')
		],
		style= style,
		data-sticky= data.id,
		data-on-init= `${hasInit}`,
	)&attributes(attr)

		div(
			class = [styles('ghost')]
			data-sticky-ghost= data.id
		)
		div(
			class = [styles('inner')]
			data-scroll-lock-fill-gap=''
		)
			block

