{
	"compilerOptions": {
		"experimentalDecorators": true,
		"jsx": "react",
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "esnext",
		"esModuleInterop": true,
		"declaration": false
	},
	"exclude": ["node_modules"],
	"paths": {
		"@component/*": ["src/component/"],
		"@layouts/*": ["src/layouts/"],
		"@pages/*": ["src/pages/*"]
	}
}
